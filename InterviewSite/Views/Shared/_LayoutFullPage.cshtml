<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | Interview Question</title>
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class='main-container'>
        <div class='header-container'>
            <div class='header'>
                @if (object.Equals(Session["UserId"], null))
                {
                    <ul class="sign-in">
                        <li><a href="/Registration">Sign up</a></li>
                        <li><a href="/Login">Sign in</a></li>
                    </ul>
                }
                else
                {
                    <ul class="log-off">
                        <li>Hello !<a href="members/@Session["User_Unique_Name"]">@Session["FirstName"] @Session["LastName"]</a></li>
                        <li><a href="Logout">Logout</a></li>
                    </ul>
                }
            </div>
            <div style="background: rgba(82,90,101,1);">
                <div class='menu'>
                    <ul>
                        <li><a href="#home">Home</a></li>
                        <li><a href="#news">Category</a></li>
                        <li><a href="#contact">Contact</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class='body'>
            <div class='content-full'>
                @RenderBody()
            </div>
        </div>
        <footer>
            <div class='footer'>
                <ul class="footer-menu">
                    <li><a href="javascript:void(0)">item1</a></li>
                    <li><a href="javascript:void(0)">item2</a></li>
                    <li><a href="javascript:void(0)">item3</a></li>
                    <li><a href="javascript:void(0)">item4</a></li>
                    <li><a href="javascript:void(0)">item5</a></li>
                    <li><a href="javascript:void(0)">item6</a></li>
                    <li><a href="javascript:void(0)">item7</a></li>
                </ul>
                <p>&copy; @DateTime.Now.Year @System.Configuration.ConfigurationManager.AppSettings["SiteName"].ToString() . All contents are copyright of their users</p>
            </div>
        </footer>

    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>